{

	"manifest_version": 2,
	"name": "ProBoards Window Info",
	"version": "1.0",
	"author": "Peter",
	"description": "Shows the window info (e.g., width).",
	
	"icons": {

		"48": "images/icons/icon-48.png",
		"96": "images/icons/icon-96.png"

	},

	"browser_action": {

		"browser_style": false,
		"default_icon": {

			"16": "/images/icons/icon-16.png",
			"32": "/images/icons/icon-32.png"

		}

	},

	"permissions": [

		"tabs",
		"activeTab"

	],

	"background": {

		"scripts": [

			"/scripts/tab_registery.js",
			"/scripts/background.js"


		]

	}

}